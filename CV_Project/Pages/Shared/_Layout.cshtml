<!DOCTYPE html>
<html lang="en">

<style>
    ::-webkit-scrollbar {
    height: 12px;
    width: 12px;
    background: #000;
}

::-webkit-scrollbar-thumb {
    background: #1FA2F6;
    -webkit-border-radius: 1ex;
    -webkit-box-shadow: 0px 1px 2px rgba(0, 0, 0, 0.75);
}

::-webkit-scrollbar-corner {
    background: #000;
}
</style>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CVs Repository</title>
    <link rel="stylesheet" href="~/css/bootswatchTheme.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

    <header>

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary" style="height:4.6rem;">
          <div class="container-fluid">
            <img src="cv-logo-1.webp" style="height:3.5rem;padding-left:4rem;" />
            <a class="navbar-brand" style="margin-top:-0.2rem;padding:0rem 4rem 0rem 1rem" asp-area="" asp-page="/Index" ><span style="font-family:cursive;font-size:1.7rem;"> Repository</span></a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
              <ul class="navbar-nav me-auto">
                <li class="nav-item active">
                  <a class="nav-link" asp-area="" asp-page="/Index" style="font-size:1.3rem;padding-left:1.2rem;" >Home</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" asp-area="" asp-page="/SendCv" style="font-size:1.3rem;padding-left:1.2rem;" >Send</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" asp-area="" asp-page="/BrowseCv" style="font-size:1.3rem;padding-left:1.2rem;" >Browse</a>
                </li>
              </ul>
            </div>
          </div>
        </nav>  

    </header>

    @RenderBody()
    
    <footer class="footer text-muted bg-primary">
        <center>
            <div class="container" >
                &copy; 2022 - All Rights Reserved By &nbsp;<a asp-area="" asp-page="/Privacy">CVs Repository&nbsp;</a>
            </div>
        </center>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js" integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</html>